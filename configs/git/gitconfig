[user]
	name = Shaun Egan
	email = shaun.egan@deimos.co.za
[alias]
  lg = log --color --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
  pp = pull --prune
[color]
  diff = auto
  status = auto
  branch = auto
  ui = true
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
  upstream = blue
[color "diff"]
  meta = yellow
  frag = magenta
  old = red
  new = green
[color "status"]
  added = yellow
  changed = green
  untracked = red
[core]
  excludesfile = ~/.gitignore
  editor=vim
  whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
  autocrlf = true
[apply]
  whitespace = nowarn
[diff]
  tool = rider
[difftool "rider"]
  cmd = "rider diff $LOCAL $REMOTE"
[merge]
  tool = rider
[mergetool "rider"]
  cmd = "rider merge $LOCAL $REMOTE $BASE &MERGED"
  trustExitCode = true
[difftool]
  prompt = false
[format]
  pretty = "Commit:  %C(yellow)%H%nAuthor:  %C(green)%aN <%aE>%nCommitter:    %C(green)%cN <%cE>%nDate:    (%C(red)%ar%Creset) %ai%n    %s%n%n%     %b%n"
[help]
  autocorrect = 1
[push]
  default = current
[cola]
  spellcheck = false
[init]
  defaultBranch = main
